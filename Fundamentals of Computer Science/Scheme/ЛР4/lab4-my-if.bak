(define-syntax my-if
  (syntax-rules ()
    ((_ condition consequent alternative) (let ((if-true (delay consequent))
                                            (if-false (delay alternative)))
                                          (or
                                           (and
                                            condition
                                            (force if-true))
                                           (force if-false))))))

(my-if #t 1 (/ 1 0))
(my-if #f (/ 1 0) 1)
