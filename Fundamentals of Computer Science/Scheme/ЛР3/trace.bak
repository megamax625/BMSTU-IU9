(define-syntax trace
  (syntax-rules ()
    ((_ expr)
     (begin
       (display 'expr)
       (display " => ")
       (let
           ((exprcalc expr))
         (display exprcalc)
         (newline)
         exprcalc)))))

(define (zip . xss)
  (if (or (null? xss)
          (null? (trace (car xss))))
      '()
      (cons (map car xss)
            (apply zip (map cdr (trace xss))))))
       
       
